<?xml version="1.0"?>

<PropertyList>

  <path>man.ac</path>

  <animation>
    <type>material</type>
    <object-name>Circle</object-name>
    <object-name>needle</object-name>
    <emission>
      <red>1.0</red>
      <green>0.6</green>
      <blue>0.3</blue>
      <factor-prop>sim/model//material/instruments/factor</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>engines/engine/mp-osi</property>
    <interpolation>
      <entry>
        <ind>10</ind>
        <dep>-108.0</dep>
      </entry>
      <entry>
        <ind>22.5</ind>
        <dep>0.0</dep>
      </entry>
      <entry>
        <ind>35</ind>
        <dep>108.0</dep>
      </entry>
    </interpolation>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
  </animation>

<!-- *** LoD *** -->
  <animation> 
    <type>range</type>
    <min-m>0</min-m>
    <max-m>30</max-m>
  </animation>

</PropertyList>
